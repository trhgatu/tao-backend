{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": [
      "ES2020"
    ],
    "rootDir": "src",
    "outDir": "dist",
    "types": [
      "node",
      "express"
    ],
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "@config/*": [
        "config/*"
      ],
      "@middlewares/*": [
        "core/middleware/*"
      ],
      "@middlewares": [
        "core/middleware/index.ts"
      ],
      "@common/*": [
        "core/utils/*"
      ],
      "@common": [
        "core/utils/index.ts"
      ],
      "@modules/*": [
        "modules/*"
      ],
      "@routes/*": [
        "routes/*"
      ],
      "@types/*": [
        "core/types/*"
      ],
      "@shared/*": [
        "shared/*"
      ],
      "@socket": [
        "socket/index.ts"
      ],
      "@socket/*": [
        "socket/*"
      ],
      "@usecases/*": [
        "usecases/*"
      ]
    },
    "typeRoots": [
      "./src/core/types",
      "./node_modules/@types"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}